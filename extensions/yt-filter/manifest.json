{
  "name": "Youtube Filter",
  "version": "0.1",
  "description": "Altering HTTP responses",
  "manifest_version": 3,
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/http-response",
  "permissions": [
    "https://www.youtube.com/*",
    "scripting",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "action": {
    "default_title": "Youtube Filter",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background/background.js"],
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-scripts/content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["https://www.youtube.com/*"],
      "resources": ["**/*", "*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b6b8a44a-b6d7-42e2-ba01-636632196d01}",
      "strict_min_version": "102.0"
    }
  }
}
